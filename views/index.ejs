    <div id="content">

        <div id="checkit">
            <div class="heading">
                <h2>Start Here</h2>
            </div>
            <div class="inputs">
                <form method="POST" action="/chat">
                    <div class="row mb-3 wide">
                        <label for="username" class="col-sm-2 col-form-label">Username</label>
                        <div class="col-sm-10">
                            <input class="form-control" id="inputEmail3" name="username" type="text"
                                placeholder="Username" required />
                        </div>
                    </div>


                    <div class="row mb-3 wide">
                        <label for="room" class="col-sm-2  form-label col-form-label">Room</label>
                        <div class="col-sm-10">
                            <select id="room" class="form-select" name="room">
                                <option value="Science">Science</option>
                                <option value="Maths">Maths</option>
                                <option value="Social Science">Social Science</option>
                                <option value="HIndi">HIndi</option>
                                <option value="English">English</option>
                            </select>
                        </div>

                    </div>
                    <div id="btnDiv">
                        <button class="btn button">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>



